{
  "compilerOptions": {
    "target": "es6",                          // Transpile to ES6
    "module": "CommonJS",                      // Use CommonJS modules for Node.js
    "strict": true,                            // Enable strict type-checking options
    "esModuleInterop": true,                   // Enable interoperability between ES and CommonJS modules
    "skipLibCheck": true,                      // Skip type checking of declaration files (can speed up the build)
    "forceConsistentCasingInFileNames": true,  // Ensure consistent file naming across OSes
    "outDir": "./dist",                        // Specify the output directory for compiled files
    "rootDir": "./src",                        // Specify the root directory of source files
    "moduleResolution": "node",                // Use Node.js module resolution
    "resolveJsonModule": true                  // Allow importing JSON files (if needed)
  },
  "include": [
    "src/**/*"  // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules"  // Exclude the node_modules directory
  ]
}
